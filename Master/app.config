<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
  	<section name="akka" type="Akka.Configuration.Hocon.AkkaConfigurationSection, Akka" />
  </configSections>	

  <akka>
    <hocon>
      <![CDATA[
	    akka {  
		    actor {
		        provider = "Akka.Remote.RemoteActorRefProvider, Akka.Remote"
		    }
		    remote {
		        helios.tcp {
		            port = 8081
		            hostname = 0.0.0.0
		            public-hostname = localhost
		        }
		    }
		}
      ]]>
    </hocon>
  </akka>
</configuration>